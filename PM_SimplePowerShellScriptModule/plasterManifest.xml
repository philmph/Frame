<?xml version="1.0" encoding="utf-8"?>
<plasterManifest
  schemaVersion="1.1"
  templateType="Project" xmlns="http://www.microsoft.com/schemas/PowerShell/Plaster/v1">
  <metadata>
    <name>PM_SimplePowerShellScriptModule</name>
    <id>7f27d057-b446-4ab6-b67f-8a43af669328</id>
    <version>0.0.1</version>
    <title>PM Simple PowerShell Script Module</title>
    <description>Scaffolds the files for a simple PowerShell script module</description>
    <author>Philipp Maier</author>
    <tags>powershell, pwsh</tags>
  </metadata>

  <parameters>
    <parameter name="AuthorName" type="text" prompt="Author name"/>
    <parameter name="AuthorEmail" type="text" prompt="Author email"/>
    <parameter name="ModuleName" type="text" prompt="Name of your module"/>
    <parameter name="ModuleDescription" type="text" prompt="Name of your module"/>
    <parameter name="ModuleVersion" type="text" prompt="Initial module version" default="0.0.1"/>
    <parameter name="VSCode" type="choice" prompt="Using VS Code as editor" default="0" store="text">
      <choice label="&amp;True"
        help="Generate ./.vscode/ including basic VS Code settings"
        value="True"/>
      <choice label="&amp;False"
        help=""
        value="False"/>
    </parameter>
    <parameter name="Tests" type="choice" prompt="Include Pester tests" default="1" store="text">
      <choice label="&amp;True"
        help="Generate ./Tests/ including basic tests for '${PLASTER_PARAM_ModuleName}'"
        value="True"/>
      <choice label="&amp;False"
        help=""
        value="False"/>
    </parameter>
    <parameter name="Builds" type="choice" prompt="Include InvokeBuild builds" default="1" store="text">
      <choice label="&amp;True"
        help="Generate ./Builds/ including basic builds for '${PLASTER_PARAM_ModuleName}'"
        value="True"/>
      <choice label="&amp;False"
        help=""
        value="False"/>
    </parameter>
  </parameters>
  
  <content>
  
  </content>
</plasterManifest>